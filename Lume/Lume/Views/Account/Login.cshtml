@{
    ViewBag.Title = "Вход";
}
<div ng-controller="LoginController" ng-show="!loading" class="container-fluid">
    <form name="loginForm">
        <p ng-if="success" class="alert alert-success">{{success}}</p>
        <p ng-if="error" class="alert alert-danger">{{error}}</p>
        <div class="form-group" ng-class="{'has-error':!loginForm.user_Email.$valid}">
            <label for="user_email">Имя пользователя (email):</label>
            <input type="email" class="form-control" name="user_Email" id="user_Email" required="" ng-model="loginData.Email">
            <span class="help-block" ng-show="loginForm.user_Email.$error.required">Поле обязательно для заполнения.</span>
            <span class="help-block" ng-show="loginForm.user_Email.$error.email">Email неправильный.</span>
        </div>
        <div class="form-group">
            <label for="pwd">Пароль:</label>
            <input type="password" class="form-control" id="pwd" ng-model="loginData.Password">
        </div>
        <div class="checkbox">
            <label><input type="checkbox" ng-model="loginData.RememberMe"> Запомнить пароль</label>
        </div>
    </form>
    <button class="btn btn-success" ng-disabled="!loginForm.$valid" ng-click="login()">Войти</button>
</div>
<div ng-if="loading" class="loading_div">
    <img src="../../Content/loading.gif" />
</div>